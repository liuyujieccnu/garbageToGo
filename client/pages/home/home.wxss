  position: relative;
  top: 12rpx;
  left: 10rpx;
  background-color: #32cc7f;
  border-radius: 25rpx;
  vertical-align: middle;
}

.testBtn text{
  font-size: 50rpx;
  font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
  font-weight: bold;
