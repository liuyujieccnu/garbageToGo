/* client/pages/home/home.wxss */
.background{
  top: 0;
  left: 0;
  position: absolute;
  z-index: -1;
  width: 100%;
  height: 100%;
}

.titleWrapper{
  text-align: center;
  margin-top: 80rpx;
}

.title{
  font-size: 70rpx;
  font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
  font-weight: bold;
  color: white;
  letter-spacing: 2rpx;
  text-shadow: 2rpx 2rpx 3rpx #4f4f4f;
}

.border{
  margin-top: 10rpx;
  width: 200rpx;
  border-bottom: 8rpx white solid;
  margin-left: 275rpx;
  box-shadow: 2rpx 2rpx 3rpx #4f4f4f;
}

.scanCodeBtn{
  margin-top: 100rpx;
  width: 450rpx;
  height: 450rpx;
  border-radius: 50%;
  background-color: #ff473d;
  box-shadow: 0rpx 0rpx 8rpx #4f4f4f;
}

.scanPng{
  margin-top:80rpx;
  width: 250rpx;
  height: 250rpx;
}

.scanText{
  margin-top: -50rpx;
  font-size: 45rpx;
  font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
  font-weight: bold;
  color: white;
  letter-spacing: 10rpx;
  text-shadow: 2rpx 2rpx 3rpx #4f4f4f;
}

.cardWrapper{
  height: 120rpx;
  width: 450rpx;
  margin-top: 80rpx;
  margin-left: 150rpx;
  background-color: white;
  border-radius: 30rpx;
}

.cardBtn{
  width: 450rpx;
  height: 120rpx;
  position: relative;
  top: 12rpx;
  left: 10rpx;
  background-color: #405bc8;
  border-radius: 25rpx;
  vertical-align: middle;
}

.cardBtn text{
  font-size: 50rpx;
  font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
  font-weight: bold;
  color: white;
  letter-spacing: 30rpx;
  text-shadow: 2rpx 2rpx 3rpx #4f4f4f;
  padding-left: 30rpx;
}

.testWrapper{
  height: 120rpx;
  width: 450rpx;
  margin-top: 80rpx;
